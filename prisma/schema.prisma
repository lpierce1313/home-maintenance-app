generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model Home {
  id        String   @id @default(cuid())
  nickname  String
  address   String?
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("good") // "good", "due", "overdue"
  category    String   @default("General")
  frequency   String?  // "monthly", "quarterly", etc.
  dueDate     DateTime
  lastDone    DateTime? 
  homeId      String
  home        Home     @relation(fields: [homeId], references: [id], onDelete: Cascade)
  logs        MaintenanceLog[] // History of this task
  createdAt   DateTime @default(now())
  @@unique([title, homeId])
}

model MaintenanceLog {
  id           String   @id @default(cuid())
  completedAt  DateTime @default(now())
  comment      String?
  cost         Float?
  performedBy  String?
  taskId       String
  fileUrl     String?
  providerId    String?
  provider      ServiceProvider? @relation(fields: [providerId], references: [id])
  task         Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  homes         Home[]
  sessions      Session[]
  providers ServiceProvider[]
}

model ServiceProvider {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  address   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  logs      MaintenanceLog[]
  createdAt DateTime @default(now())

  @@unique([name, userId]) // Unique per user, not per home
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
